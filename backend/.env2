# Environment Configuration for XAMPP
# ===================================
# Configuración específica para desarrollo con XAMPP

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database - XAMPP MySQL
DATABASE_URL=mysql://root@localhost:3306/trading_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (opcional para desarrollo)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# External APIs
ALPHA_VANTAGE_API_KEY=demo
FINNHUB_API_KEY=sandbox_key
YAHOO_FINANCE_ENABLED=true
NEWS_API_KEY=your_news_api_key

# AI/ML Configuration
MODEL_PATH=models/
AUTO_TRAINING_ENABLED=true
AUTO_TRAINING_INTERVAL_HOURS=6
DRIFT_DETECTION_THRESHOLD=0.1

# Reinforcement Learning
RL_AGENT_TYPE=DQN
RL_TRAINING_EPISODES=1000
RL_EVALUATION_EPISODES=10
RL_MODEL_SAVE_INTERVAL=100

# MetaTrader 4
MT4_HOST=localhost
MT4_PORT=9090
MT4_ENABLED=false
MT4_MAGIC_NUMBER=12345

# Trading Configuration
COMMISSION_RATE=0.001
MAX_POSITION_SIZE=0.05
RISK_FREE_RATE=0.02
MAX_DAILY_LOSS=0.05

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Subscription System
SUBSCRIPTION_DATA_DIR=data/subscriptions
SUBSCRIPTION_LOGS_DIR=logs/subscriptions

# Default Admin User (created by database script)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@aitraderx.com
DEFAULT_ADMIN_PASSWORD=admin123 